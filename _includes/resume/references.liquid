<div class="list-groups">
  {% for content in site.data.resume.references %}
    <div class="list-group">
      <table class="table-cv list-group-table">
        <tbody>
          <tr>
            {% if content.icon %}
              <td class="list-group-category-icon">
                <i class="{{ content.icon }}"></i>
              </td>
            {% else %}
              <td class="list-group-category-icon"></td>
            {% endif %}
            <td class="list-group-category">
              <a href="{{ content.url }}" target="_blank">{{ content.name }}</a>
            </td>
          </tr>
          <tr>
            <td></td>
            <td class="list-group-name">
              <b>{{ content.reference }}</b>
              {% if content.email %}
                <br>
                <span>Email: {{ content.email }}</span>
              {% endif %}
              {% if content.phone %}
                <br>
                <span>Phone: {{ content.phone }}</span>
              {% endif %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
